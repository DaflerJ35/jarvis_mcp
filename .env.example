# JARVIS Environment Configuration

# Server settings
SERVER_PORT=8000
ENABLE_MCP=true
MCP_SSE_PATH=/mcp/sse
STREAM_PATH=/stream

# Voice settings
ENABLE_VOICE=true
VOICE_PROVIDER=pyttsx3  # options: pyttsx3, gtts
VOICE_RATE=125  # Lower numbers = slower speech
VOICE_VOLUME=1.0  # Range 0.0 - 1.0
VOICE_ID=  # Leave empty for default voice

# API Keys for enhanced features
OPENAI_API_KEY=your_openai_api_key_here
SERPAPI_KEY=your_serpapi_key_here  # For web search
FIREBASE_CREDENTIALS=path/to/firebase_credentials.json

# Research settings
RESEARCH_MAX_RESULTS=5
RESEARCH_MAX_DEPTH=2

# Other settings
PROJECT_ROOT=./
MAX_AGENT_STEPS=30 